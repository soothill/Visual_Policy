{
  "name": "impossible-cloud-policy-generator",
  "version": "1.0.0",
  "description": "Impossible Cloud Bucket Policy Generator with comprehensive test suite",
  "scripts": {
    "test": "npm run test:unit && npm run test:smoke",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testMatch='**/tests/unit/**/*.test.js'",
    "test:smoke": "playwright test tests/e2e/smoke.spec.js",
    "test:e2e": "playwright test",
    "test:e2e:full": "playwright test tests/e2e/policy-generator.spec.js",
    "test:unit:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --testMatch='**/tests/unit/**/*.test.js'",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --testMatch='**/tests/unit/**/*.test.js'",
    "playwright:install": "playwright install --with-deps",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "keywords": [
    "s3",
    "bucket-policy",
    "impossible-cloud",
    "policy-generator"
  ],
  "author": "Darren Soothill",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.11",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,html}": [
      "prettier --write"
    ]
  }
}
